{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "importHelpers": true,
        "rootDir": "src",
        "baseUrl": ".",
        "declaration": false,
        "traceResolution": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "pretty": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "lib": [
            "dom",
            "es5",
            "es2015.core",
            "es2015.promise"
        ],
        "paths": { "*": ["src/types/*"] }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_module"]
}
