{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es5",
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "pretty": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": false,
        "lib": [
            "dom",
            "es5",
            "es2015.core",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}
